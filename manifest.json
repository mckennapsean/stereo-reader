{
  "manifest_version": 3,
  "name": "FusionText",
  "version": "1.0",
  "description": "A tool for vision therapy by selectively coloring text.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}